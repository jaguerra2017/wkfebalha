<div class="col-md-12"  data-ng-show="model.showEventsForm">
    <!-- BEGIN Portlet Events-CRUD -->
    <div class="portlet light bordered" style="position:relative;">
        <div class="portlet-title">
            <div class="caption font-dark">
                <span class="caption-subject bold uppercase">
                    [[model.createAction == true ? 'Crear' : 'Editar']] evento
                </span>
            </div>
            <!-- Toolbar -->
            <div class="actions custom-toolbar-actions">
                <button class="btn default btn-footer width-auto-important" type="button" data-ng-click="hideEventsForm()">
                    Cancelar
                </button>
                <button data-ng-if="model.createAction" class="btn blue btn-blue btn-footer width-auto-important"
                        type="submit" data-ng-click="saveEventsData('stay')">
                    Guardar
                </button>
                <button data-ng-if="model.createAction" class="btn blue btn-blue btn-footer width-auto-important"
                        type="submit" data-ng-click="saveEventsData('clear')">
                    Guardar y limpiar
                </button>
                <button class="btn blue btn-blue btn-footer width-auto-important" type="submit"
                        data-ng-click="saveEventsData('close')">
                    Guardar y cerrar
                </button>
                <a class="btn btn-circle btn-icon-only btn-default fullscreen"  style="margin-left:40px;"></a>
            </div>
        </div>
        <div class="portlet-body form">
            <form class="horizontal-form">
                <div class="form-body">
                    <div class="tabbable-line">
                        <!-- Event sections -->
                        <ul class="nav nav-tabs">
                            <li class="[[model.formActiveView == 'general-info' ? 'active' : '']]">
                                <a href="#event_general_data" data-toggle="tab"
                                   data-ng-click="updateFormSection('general-info')">
                                    Datos generales
                                </a>
                            </li>
                            <li class="[[model.formActiveView == 'blocks' ? 'active' : '']]">
                                <a href="#event_blocks" data-toggle="tab"
                                   data-ng-click="updateFormSection('blocks')">
                                    Bloques
                                </a>
                            </li>
                            <li class="[[model.formActiveView == 'comments' ? 'active' : '']]">
                                <a href="#event_comments" data-toggle="tab"
                                   data-ng-click="updateFormSection('comments')">
                                    Comentarios
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="sub-tab-container">
                        <div class="tab-content">
                            <!-- General info -->
                            {% include '@app_backend_template_directory/Event/crud_form_general_info.html.twig' %}
                            <!-- Blocks -->
                            {% include '@app_backend_template_directory/Event/crud_form_blocks.html.twig' %}
                            <!-- Comments -->
                            {% include '@app_backend_template_directory/Event/crud_form_comments.html.twig' %}
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-xs-12 col-md-offset-4 col-md-8">
                            <button class="btn default btn-footer" type="button" data-ng-click="hideEventsForm()">
                                Cancelar
                            </button>
                            <button data-ng-if="model.createAction" class="btn blue btn-blue btn-footer"
                                    type="submit" data-ng-click="saveEventsData('stay')">
                                Guardar
                            </button>
                            <button data-ng-if="model.createAction" class="btn blue btn-blue btn-footer"
                                    type="submit" data-ng-click="saveEventsData('clear')">
                                Guardar y limpiar
                            </button>
                            <button class="btn blue btn-blue btn-footer" type="submit"
                                    data-ng-click="saveEventsData('close')">
                                Guardar y cerrar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Data Loader -->
        <div data-ng-show="model.loadingData">
            {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
        </div>
    </div>
</div>