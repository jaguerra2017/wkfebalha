<table class="table table-hover table-light">
    <thead>
    <tr class="uppercase">
        <th width="50">
            <div class="icheckbox_square-blue checkbox-master [[model.allCollateralSelected ? 'checked' : '']]"
                 data-ng-click="selectAllCollateral($event)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)">
            </div>
        </th>
        <th class="table-header" width="150">
            Imagen principal
        </th>
        <th class="table-header">
            TÃ­tulo
        </th>
        <th class="table-header" width="120">
            Status
        </th>
        <th class="table-header" width="150">
            Autor
        </th>
        <th class="table-header" width="135">
            Fecha creado
        </th>
        <th class="table-header" width="95">
            Acciones
        </th>
    </tr>
    </thead>
    <tr data-ng-repeat="collateral in model.collateralCollection | limitTo : (model.collateralCurrentResultLimit - (model.collateralCurrentResultStart - 1)) : (model.collateralCurrentResultStart - 1) ">
        <td>
            <div class="icheckbox_square-blue checkbox-[[collateral.tree_slug]] [[collateral.selected ? 'checked' : '']]"
                 data-ng-click="selectCollateral($event,collateral)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-'+collateral.tree_slug, null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-'+collateral.tree_slug, null)">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectCollateral($event,collateral)">
            <div data-ng-if="collateral.have_featured_image == true" class="collateral-mini-thumbnail-container">
                <img data-ng-src="[[collateral.web_filtered_list_featured_image_mini_thumbnail_url]]">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectCollateral($event,collateral)" data-ng-bind="collateral.title"></td>
        <td class="cursor-pointer" data-ng-click="selectCollateral($event,collateral)">
            <span data-ng-bind="collateral.post_status_name"
            class="label label-sm [[collateral.post_status_name =='Pendiente'? 'label-warning' : 'label-success']] ">
            </span>
        </td>
        <td class="cursor-pointer" data-ng-click="selectCollateral($event,collateral)" data-ng-bind="collateral.author_name"></td>
        <td class="cursor-pointer" data-ng-click="selectCollateral($event,collateral)" data-ng-bind="collateral.created_date"></td>
        <td>
            {% if canEdit %}
                <button data-ng-if="collateral.canEdit" class="btn btn-link"
                data-ng-click="editCollateral(collateral)">
                    <i class="icon-pencil btn-blue"></i>
                </button>
            {% endif %}
            {% if canDelete %}
                <button data-ng-if="collateral.canDelete" class="btn btn-link"
                data-ng-click="deleteCollateral(collateral.id)">
                    <i class="icon-trash btn-red"></i>
                </button>
            {% endif %}
        </td>
    </tr>
</table>

<!-- Message when isn't data to show -->
<div data-ng-show="model.collateralCollection.length == 0">
    {% include '@app_backend_template_directory/Shared/no_data_to_show.html.twig' %}
</div>
<!-- Data Loader -->
<div data-ng-show="model.loadingData">
    {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
</div>