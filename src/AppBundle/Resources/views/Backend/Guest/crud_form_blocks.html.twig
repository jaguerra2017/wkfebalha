<div data-ng-if="model.formActiveView == 'blocks'" class="row" id="guest_blocks">
    <div data-ng-if="model.createAction == true" style="display:block;text-align: center; color:#93a2a9; padding: 20px;">
        Primero debe de <strong>Guardar</strong> para poder agregar Bloques a este Invitado.
    </div>
    <div data-ng-if="model.createAction == false && model.selectedGuest.id != undefined">
        <block-selector elementid="model.selectedGuest.id" elementtype="guest"></block-selector>
    </div>
</div>