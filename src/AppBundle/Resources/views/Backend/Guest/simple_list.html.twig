<table class="table table-hover table-light">
    <thead>
    <tr class="uppercase">
        <th width="50">
            <div class="icheckbox_square-blue checkbox-master [[model.allGuestsSelected ? 'checked' : '']]"
                 data-ng-click="selectAllGuests($event)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)">
            </div>
        </th>
        <th class="table-header" width="150">
            Imagen principal
        </th>
        <th class="table-header">
            TÃ­tulo
        </th>
        <th class="table-header" width="120">
            Status
        </th>
        <th class="table-header" width="150">
            Autor
        </th>
        <th class="table-header" width="135">
            Fecha creado
        </th>
        <th class="table-header" width="95">
            Acciones
        </th>
    </tr>
    </thead>
    <tr data-ng-repeat="guest in model.guestsCollection | limitTo : (model.guestsCurrentResultLimit - (model.guestsCurrentResultStart - 1)) : (model.guestsCurrentResultStart - 1) ">
        <td>
            <div class="icheckbox_square-blue checkbox-[[guest.tree_slug]] [[guest.selected ? 'checked' : '']]"
                 data-ng-click="selectGuests($event,guest)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-'+guest.tree_slug, null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-'+guest.tree_slug, null)">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectGuests($event,guest)">
            <div data-ng-if="guest.have_featured_image == true" class="guest-mini-thumbnail-container">
                <img data-ng-src="[[guest.web_filtered_list_featured_image_mini_thumbnail_url]]">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectGuests($event,guest)" data-ng-bind="guest.title"></td>
        <td class="cursor-pointer" data-ng-click="selectGuests($event,guest)">
            <span data-ng-bind="guest.post_status_name"
            class="label label-sm [[guest.post_status_name =='Pendiente'? 'label-warning' : 'label-success']] ">
            </span>
        </td>
        <td class="cursor-pointer" data-ng-click="selectGuests($event,guest)" data-ng-bind="guest.author_name"></td>
        <td class="cursor-pointer" data-ng-click="selectGuests($event,guest)" data-ng-bind="guest.created_date"></td>
        <td>
            {% if canEdit %}
                <button data-ng-if="guest.canEdit" class="btn btn-link"
                data-ng-click="editGuests(guest)">
                    <i class="icon-pencil btn-blue"></i>
                </button>
            {% endif %}
            {% if canDelete %}
                <button data-ng-if="guest.canDelete" class="btn btn-link"
                data-ng-click="deleteGuests(guest.id)">
                    <i class="icon-trash btn-red"></i>
                </button>
            {% endif %}
        </td>
    </tr>
</table>

<!-- Message when isn't data to show -->
<div data-ng-show="model.guestsCollection.length == 0">
    {% include '@app_backend_template_directory/Shared/no_data_to_show.html.twig' %}
</div>
<!-- Data Loader -->
<div data-ng-show="model.loadingData">
    {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
</div>