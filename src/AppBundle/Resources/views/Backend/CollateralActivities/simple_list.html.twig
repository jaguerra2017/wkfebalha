<table class="table table-hover table-light">
    <thead>
    <tr class="uppercase">
        <th width="50">
            <div class="icheckbox_square-blue checkbox-master [[model.allCollateralActivitiesSelected ? 'checked' : '']]"
                 data-ng-click="selectAllCollateralActivities($event)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)">
            </div>
        </th>
        <th class="table-header" width="150">
            Imagen principal
        </th>
        <th class="table-header">
            TÃ­tulo
        </th>
        <th class="table-header" width="120">
            Status
        </th>
        <th class="table-header" width="150">
            Autor
        </th>
        <th class="table-header" width="135">
            Fecha creado
        </th>
        <th class="table-header" width="95">
            Acciones
        </th>
    </tr>
    </thead>
    <tr data-ng-repeat="collateralactivitie in model.collateralactivitiesCollection | limitTo : (model.collateralactivitiesCurrentResultLimit - (model.collateralactivitiesCurrentResultStart - 1)) : (model.collateralactivitiesCurrentResultStart - 1) ">
        <td>
            <div class="icheckbox_square-blue checkbox-[[collateralactivitie.tree_slug]] [[collateralactivitie.selected ? 'checked' : '']]"
                 data-ng-click="selectCollateralActivities($event,collateralactivitie)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-'+collateralactivitie.tree_slug, null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-'+collateralactivitie.tree_slug, null)">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectCollateralActivities($event,collateralactivitie)">
            <div data-ng-if="collateralactivitie.have_featured_image == true" class="collateralactivitie-mini-thumbnail-container">
                <img data-ng-src="[[collateralactivitie.web_filtered_list_featured_image_mini_thumbnail_url]]">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectCollateralActivities($event,collateralactivitie)" data-ng-bind="collateralactivitie.title"></td>
        <td class="cursor-pointer" data-ng-click="selectCollateralActivities($event,collateralactivitie)">
            <span data-ng-bind="collateralactivitie.post_status_name"
            class="label label-sm [[collateralactivitie.post_status_name =='Pendiente'? 'label-warning' : 'label-success']] ">
            </span>
        </td>
        <td class="cursor-pointer" data-ng-click="selectCollateralActivities($event,collateralactivitie)" data-ng-bind="collateralactivitie.author_name"></td>
        <td class="cursor-pointer" data-ng-click="selectCollateralActivities($event,collateralactivitie)" data-ng-bind="collateralactivitie.created_date"></td>
        <td>
            {% if canEdit %}
                <button data-ng-if="collateralactivitie.canEdit" class="btn btn-link"
                data-ng-click="editCollateralActivities(collateralactivitie)">
                    <i class="icon-pencil btn-blue"></i>
                </button>
            {% endif %}
            {% if canDelete %}
                <button data-ng-if="collateralactivitie.canDelete" class="btn btn-link"
                data-ng-click="deleteCollateralActivities(collateralactivitie.id)">
                    <i class="icon-trash btn-red"></i>
                </button>
            {% endif %}
        </td>
    </tr>
</table>

<!-- Message when isn't data to show -->
<div data-ng-show="model.collateralactivitiesCollection.length == 0">
    {% include '@app_backend_template_directory/Shared/no_data_to_show.html.twig' %}
</div>
<!-- Data Loader -->
<div data-ng-show="model.loadingData">
    {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
</div>