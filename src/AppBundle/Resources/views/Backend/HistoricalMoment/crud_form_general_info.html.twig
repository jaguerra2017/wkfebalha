<div data-ng-show="model.formActiveView == 'general-info'" class="row" id="historicalMoment_general_data">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <div class="form-group margin-top-20 [[model.yearHasError ? 'has-error' : '']]">
                    <label class="control-label">
                        Año
                    </label>
                    <input class="form-control" type="text" placeholder="No más de 4 caracteres."
                    data-ng-model="model.selectedHistoricalMoment.year" maxlength="4">
                    <span data-ng-if="model.yearHasError" class="help-block">
                        <p >Valor incorrecto o en blanco.</p>
                    </span>
                </div>
            </div>

            <div class="col-xs-12 col-md-4">
                <div class="form-group margin-top-20">
                    <label class="control-label">Status</label>
                    <div class="input-group">
                        <div class="input-group-btn">
                            <a class="btn toolbar-btn-dropdown-text btn-sm btn-default dropdown-toggle"
                               style="text-align: left; font-size: 14px;"
                               data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                [[model.selectedPostStatus == null ? 'Seleccione' : model.selectedPostStatus.name_es]] <i class="fa fa-angle-down"></i>
                            </a>
                            <div class="dropdown-menu hold-on-click dropdown-checkboxes "
                             style="min-width: 275px;top: 25px;margin-left: 0px;">
                                <label data-ng-repeat="postStatus in model.postStatusCollection">
                                    <a class="btn" style="width: 100%;text-align: left;"
                                       data-ng-click="updateHistoricalMomentsForm($event, 'status', postStatus)">
                                        [[postStatus.name_es]]
                                    </a>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="form-group margin-top-20 [[model.publishedDateHasError ? 'has-error' : '']]">
                    <label class="control-label">Fecha de publicación</label>
                    <input data-ng-show="model.selectedPostStatus.tree_slug == 'generic-post-status-published'"
                    class="form-control form-control-inline date-picker"
                    size="16" type="text"
                    data-ng-model="model.selectedHistoricalMoment.published_date"/>
                    <span class="help-block">
                        <p data-ng-if="model.selectedPostStatus.tree_slug == 'generic-post-status-pending'">
                            El status debe de estar "Publicado".
                        </p>
                        <p data-ng-if="!model.publishedDateHasError && model.selectedPostStatus.tree_slug == 'generic-post-status-published'">
                            Ejemplo: 19/07/1985
                        </p>
                        <p data-ng-if="model.publishedDateHasError && model.selectedPostStatus.tree_slug == 'generic-post-status-published'">
                            Valor incorrecto o en blanco.
                        </p>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="form-group margin-top-20 [[model.contentHasError ? 'has-error' : '']]">
            <label class="control-label">Datos</label>
            <textarea data-ng-model="model.selectedHistoricalMoment.content_es" style="width: 100%;height:120px">
            </textarea>
            <span data-ng-if="model.contentHasError" class="help-block">
                <p>
                    Valor incorrecto o en blanco.
                </p>
            </span>
        </div>
    </div>
</div>