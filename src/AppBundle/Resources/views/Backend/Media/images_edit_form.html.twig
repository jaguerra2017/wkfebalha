<div class="row" style="position:relative;">
    <div class="col-xs-12 col-md-7" style="">
        <div class="media-image-details-container">
            <img data-ng-src="[[model.selectedImage.url]]" class="img-responsive">
        </div>
    </div>
    <div class="col-xs-12 col-md-5">
        <div class="form-group [[model.imageNameHasError?'has-error':'']]">
            <label class="control-label">Nombre</label>
            <div class="input-group">
                <input class="form-control" type="text"
                data-ng-model="model.selectedImage.name_es">
                <div class="input-group-btn">
                    <button class="btn default disabled" type="button">
                       .[[model.selectedImage.extension]]
                    </button>
                </div>
            </div>
            <span class="help-block">
                <p data-ng-if="model.imageNameHasError">
                    Valor incorrecto o en blanco.
                </p>
            </span>
        </div>
        <div class="form-group [[model.imageAlternativeTextHasError?'has-error':'']]">
            <label class="control-label">Texto alternativo</label>
            <input class="form-control" type="text"
            data-ng-model="model.selectedImage.alternative_text_es">
            <span class="help-block">
                <p data-ng-if="model.imageAlternativeTextHasError">
                    Valor incorrecto o en blanco.
                </p>
            </span>
        </div>
        <div class="form-group">
            <label class="control-label">Descripción</label>
            <textarea data-ng-model="model.selectedImage.description_es" style="width: 100%;">
            </textarea>
        </div>
        <div class="form-group">
            <label class="control-label">Ubicación relativa</label>
            <span class="help-block">
                [[model.selectedImage.url]]
            </span>
        </div>
        <div class="form-group">
            <label class="control-label">Ubicación absoluta</label>
            <span class="help-block">
                (dominio del sitio)/[[model.selectedImage.url]]
            </span>
        </div>
        <div class="form-group">
            <label class="control-label">Dimensiones</label>
            <span class="help-block">
                [[model.selectedImage.dimension]] píxeles
            </span>
        </div>
        <div class="form-group">
            <label class="control-label">Tamaño</label>
            <span class="help-block">
                [[model.selectedImage.size]] bytes ([[((model.selectedImage.size) / 1000) | number:2]] kB)
                ([[((model.selectedImage.size) / 100000) | number:2]] MB)
            </span>
        </div>
    </div>

    <div data-ng-show="model.loadingData">
        {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
    </div>
</div>