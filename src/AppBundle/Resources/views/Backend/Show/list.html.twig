<div class="col-md-12" data-ng-if="!model.showShowsForm">
    <!-- BEGIN Portlet Shows-List -->
    <div class="portlet light bordered" style="min-height: 383px;">
        <div class="portlet-title">
            <div class="caption font-dark">
                <span class="caption-subject bold uppercase">
                  Funci&oacute;n
                </span>
                <span class="caption-helper">
                    Gestione las funciones del BNC ...
                </span>
            </div>
            <div style="margin-left: 15px" class="actions custom-toolbar-actions">
                <div class="input-group" style="width: 75px">
                    <div class="input-group-btn">
                        <a class="btn toolbar-btn-dropdown-text btn-sm btn-default dropdown-toggle"
                           style="text-align: left; font-size: 11px;"
                           data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            [[model.selectedLanguage == null ? 'Seleccione' : model.selectedLanguage.text]] <i class="fa fa-angle-down"></i>
                        </a>
                        <div class="dropdown-menu hold-on-click dropdown-checkboxes "
                             style="min-width: 75px;top: 25px;margin-left: 0px;">
                            <label data-ng-repeat="language in model.languages">
                                <a class="btn" style="width: 100%;text-align: left;"
                                    data-ng-click="changeLoadDataOrSavedInfoByLanguage($event, 'list', language)"
                                >
                                    [[language.text]]
                                </a>
                            </label>
                        </div>
                    </div>
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen"  style="margin-left:20px;"></a>
                </div>
            </div>
            <!-- Toolbar -->
            <div class="actions custom-toolbar-actions">
                {% if canCreate %}
                    <a class="btn btn-add [[model.canCreateShows ? 'blue btn-blue' : '']] btn-circle btn-icon-only btn-default"
                    data-ng-click="createShows()">
                        <i class="fa fa-plus"></i>
                    </a>
                {% endif %}
                {% if canDelete %}
                <a class="btn [[model.canDeleteShows ? 'btn-danger' : '']] btn-circle btn-icon-only btn-default"
                data-ng-click="deleteShows('all')"
                   style="margin-left:10px;">
                    <i class="icon-trash"></i>
                </a>
                {% endif %}
                <a class="btn btn-circle btn-icon-only btn-default reload" style="margin-left:10px;"
                data-ng-click="getShows()">
                    <i class="icon-refresh"></i>
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <!-- Search bar -->
            <div class="inputs">
                <div class="portlet-input input-small input-inline"
                 style="width: 100% !important;border-bottom: 1px solid #eee;margin-bottom: 20px;padding-bottom: 20px;">
                    <div class="input-icon right">
                        <i class="icon-magnifier"></i>
                        <input type="text" class="form-control form-control-solid" placeholder="Buscar..."
                        data-ng-model="model.generalSearchValue" data-ng-keyup="searchShows($event)"
                        style="color:#2a3239;">
                    </div>
                </div>
            </div>
            <!-- Paginator and View Mode-->
            <div class="row">
                <div class="col-xs-12 col-md-6 paginator">
                    <span>
                        Mostrar
                    </span>
                    <div class="form-group inline m-b-xs" style="float:left;">
                        <select class="form-control input-xsmall"
                        data-ng-model="model.showsCurrentPageSize"
                        data-ng-options="entrySize for entrySize in model.entriesSizesCollection"
                        data-ng-change="resetPaginationPages()">
                        </select>
                    </div>
                    <span>
                        entradas
                    </span>

                    <span style="border-left: 1px solid #eee;padding-left: 10px;">
                        <strong>[[model.showsCurrentResultStart]]</strong>
                    </span>
                    <span>
                         -
                    </span>
                    <span>
                        <strong>[[model.showsCurrentResultLimit]]</strong>
                    </span>
                    <span>
                        de <strong>[[model.showsCollection.length]]</strong> entradas
                    </span>

                    <span style="border-left: 1px solid #eee;padding-left: 10px;">
                        PÃ¡gina
                    </span>
                    <div class="form-group inline m-b-xs" style="float:left;">
                        <select class="form-control input-s-xs"
                                data-ng-model="model.showsCurrentPage"
                                data-ng-options="page for page in model.showsPagesCollection"
                                data-ng-change="updatePaginationValues()">
                        </select>
                    </div>
                    <span>
                        de <strong>[[model.showsPagesCollection.length]]</strong>
                    </span>
                </div>
                <div class="col-xs-12 col-md-6 view-mode">
                    <btn class="btn btn-sm [[model.activeView == 'simple_list' ? 'grey-cascade' : 'default']]"
                     data-ng-click="changeViewMode('simple_list')">
                        <i class="fa fa-list"></i>
                    </btn>
                    <btn class="btn btn-sm [[model.activeView == 'grid_list' ? 'grey-cascade' : 'default']]"
                         data-ng-click="changeViewMode('grid_list')">
                        <i class="fa fa-th"></i>
                    </btn>
                </div>
            </div>
            <!-- Grid List Mode -->
            <div data-ng-if="model.activeView == 'grid_list'" style="position:relative;">
                {% include '@app_backend_template_directory/Show/grid_list.html.twig' %}
            </div>
            <!-- Simple List Mode -->
            <div data-ng-if="model.activeView == 'simple_list'" class="table-scrollable table-scrollable-borderless" style="position:relative;">
                {% include '@app_backend_template_directory/Show/simple_list.html.twig' %}
            </div>
        </div>
    </div>
</div>