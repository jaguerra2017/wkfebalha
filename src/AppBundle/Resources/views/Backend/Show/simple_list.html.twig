<table class="table table-hover table-light">
    <thead>
    <tr class="uppercase">
        <th width="50">
            <div class="icheckbox_square-blue checkbox-master [[model.allShowsSelected ? 'checked' : '']]"
                 data-ng-click="selectAllShows($event)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)">
            </div>
        </th>
        <th class="table-header" width="150">
            Imagen principal
        </th>
        <th class="table-header">
            TÃ­tulo
        </th>
        <th class="table-header" width="120">
            Status
        </th>
        <th class="table-header" width="150">
            Autor
        </th>
        <th class="table-header" width="135">
            Fecha creado
        </th>
        <th class="table-header" width="95">
            Acciones
        </th>
    </tr>
    </thead>
    <tr data-ng-repeat="show in model.showsCollection | limitTo : (model.showsCurrentResultLimit - (model.showsCurrentResultStart - 1)) : (model.showsCurrentResultStart - 1) ">
        <td>
            <div class="icheckbox_square-blue checkbox-[[show.tree_slug]] [[show.selected ? 'checked' : '']]"
                 data-ng-click="selectShows($event,show)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-'+show.tree_slug, null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-'+show.tree_slug, null)">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectShows($event,show)">
            <div data-ng-if="show.have_featured_image == true" class="show-mini-thumbnail-container">
                <img data-ng-src="[[show.web_filtered_list_featured_image_mini_thumbnail_url]]">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectShows($event,show)" data-ng-bind="show.title"></td>
        <td class="cursor-pointer" data-ng-click="selectShows($event,show)">
            <span data-ng-bind="show.post_status_name"
            class="label label-sm [[show.post_status_name =='Pendiente'? 'label-warning' : 'label-success']] ">
            </span>
        </td>
        <td class="cursor-pointer" data-ng-click="selectShows($event,show)" data-ng-bind="show.author_name"></td>
        <td class="cursor-pointer" data-ng-click="selectShows($event,show)" data-ng-bind="show.created_date"></td>
        <td>
            {% if canEdit %}
                <button data-ng-if="show.canEdit" class="btn btn-link"
                data-ng-click="editShows(show)">
                    <i class="icon-pencil btn-blue"></i>
                </button>
            {% endif %}
            {% if canDelete %}
                <button data-ng-if="show.canDelete" class="btn btn-link"
                data-ng-click="deleteShows(show.id)">
                    <i class="icon-trash btn-red"></i>
                </button>
            {% endif %}
        </td>
    </tr>
</table>

<!-- Message when isn't data to show -->
<div data-ng-show="model.showsCollection.length == 0">
    {% include '@app_backend_template_directory/Shared/no_data_to_show.html.twig' %}
</div>
<!-- Data Loader -->
<div data-ng-show="model.loadingData">
    {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
</div>