<table class="table table-hover table-light">
    <thead>
    <tr class="uppercase">
        <th width="50">
            <div class="icheckbox_square-blue checkbox-master [[model.allHeadQuartersSelected ? 'checked' : '']]"
                 data-ng-click="selectAllHeadQuarters($event)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-master', null)">
            </div>
        </th>
        <th class="table-header" width="150">
            Imagen principal
        </th>
        <th class="table-header">
            TÃ­tulo
        </th>
        <th class="table-header" width="120">
            Status
        </th>
        <th class="table-header" width="150">
            Autor
        </th>
        <th class="table-header" width="135">
            Fecha creado
        </th>
        <th class="table-header" width="95">
            Acciones
        </th>
    </tr>
    </thead>
    <tr data-ng-repeat="headquarter in model.headquartersCollection | limitTo : (model.headquartersCurrentResultLimit - (model.headquartersCurrentResultStart - 1)) : (model.headquartersCurrentResultStart - 1) ">
        <td>
            <div class="icheckbox_square-blue checkbox-[[headquarter.tree_slug]] [[headquarter.selected ? 'checked' : '']]"
                 data-ng-click="selectHeadQuarters($event,headquarter)"
                 data-ng-mouseover="updateICheckStyles($event, 'checkbox', 'checkbox-'+headquarter.tree_slug, null)"
                 data-ng-mouseleave="updateICheckStyles($event, 'checkbox', 'checkbox-'+headquarter.tree_slug, null)">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectHeadQuarters($event,headquarter)">
            <div data-ng-if="headquarter.have_featured_image == true" class="headquarter-mini-thumbnail-container">
                <img data-ng-src="[[headquarter.web_filtered_list_featured_image_mini_thumbnail_url]]">
            </div>
        </td>
        <td class="cursor-pointer" data-ng-click="selectHeadQuarters($event,headquarter)" data-ng-bind="headquarter.title"></td>
        <td class="cursor-pointer" data-ng-click="selectHeadQuarters($event,headquarter)">
            <span data-ng-bind="headquarter.post_status_name"
            class="label label-sm [[headquarter.post_status_name =='Pendiente'? 'label-warning' : 'label-success']] ">
            </span>
        </td>
        <td class="cursor-pointer" data-ng-click="selectHeadQuarters($event,headquarter)" data-ng-bind="headquarter.author_name"></td>
        <td class="cursor-pointer" data-ng-click="selectHeadQuarters($event,headquarter)" data-ng-bind="headquarter.created_date"></td>
        <td>
            {% if canEdit %}
                <button data-ng-if="headquarter.canEdit" class="btn btn-link"
                data-ng-click="editHeadQuarters(headquarter)">
                    <i class="icon-pencil btn-blue"></i>
                </button>
            {% endif %}
            {% if canDelete %}
                <button data-ng-if="headquarter.canDelete" class="btn btn-link"
                data-ng-click="deleteHeadQuarters(headquarter.id)">
                    <i class="icon-trash btn-red"></i>
                </button>
            {% endif %}
        </td>
    </tr>
</table>

<!-- Message when isn't data to show -->
<div data-ng-show="model.headquartersCollection.length == 0">
    {% include '@app_backend_template_directory/Shared/no_data_to_show.html.twig' %}
</div>
<!-- Data Loader -->
<div data-ng-show="model.loadingData">
    {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
</div>