<div class="col-md-12" data-ng-if="!model.showPagesForm">
    <!-- BEGIN Portlet Pages-List -->
    <div class="portlet light bordered" style="min-height: 383px;">
        <div class="portlet-title">
            <div class="caption font-dark">
                <span class="caption-subject bold uppercase">
                    Páginas
                </span>
                <span class="caption-helper">
                    Gestione el contenido estático del sitio...
                </span>
            </div>
            <!-- Toolbar -->
            <div class="actions custom-toolbar-actions">
                {% if canCreate %}
                    <a class="btn btn-add [[model.canCreatePages ? 'blue btn-blue' : '']] btn-circle btn-icon-only btn-default"
                       data-ng-click="createPages()">
                        <i class="fa fa-plus"></i>
                    </a>
                {% endif %}
                {% if canDelete %}
                    <a class="btn [[model.canDeletePages ? 'btn-danger' : '']] btn-circle btn-icon-only btn-default"
                       data-ng-click="deletePages('all')"
                       style="margin-left:10px;">
                        <i class="icon-trash"></i>
                    </a>
                {% endif %}
                <a class="btn btn-circle btn-icon-only btn-default reload" style="margin-left:10px;"
                   data-ng-click="getPages()">
                    <i class="icon-refresh"></i>
                </a>
                <a class="btn btn-circle btn-icon-only btn-default fullscreen"  style="margin-left:40px;"></a>
            </div>
        </div>
        <div class="portlet-body">
            <!-- Search bar -->
            <div class="inputs">
                <div class="portlet-input input-small input-inline"
                     style="width: 100% !important;border-bottom: 1px solid #eee;margin-bottom: 20px;padding-bottom: 20px;">
                    <div class="input-icon right">
                        <i class="icon-magnifier"></i>
                        <input type="text" class="form-control form-control-solid" placeholder="Buscar..."
                        data-ng-model="model.generalSearchValue" data-ng-keyup="searchPages($event)"
                        style="color:#2a3239;">
                    </div>
                </div>
            </div>
            <!-- Paginator and View Mode-->
            <div class="row">
                <div class="col-xs-12 col-md-6 paginator">
                    <span>
                        Mostrar
                    </span>
                    <div class="form-group inline m-b-xs" style="float:left;">
                        <select class="form-control input-xsmall"
                                data-ng-model="model.pagesCurrentPageSize"
                                data-ng-options="entrySize for entrySize in model.entriesSizesCollection"
                                data-ng-change="resetPaginationPages()">
                        </select>
                    </div>
                    <span>
                        entradas
                    </span>

                    <span style="border-left: 1px solid #eee;padding-left: 10px;">
                        <strong>[[model.pagesCurrentResultStart]]</strong>
                    </span>
                    <span>
                         -
                    </span>
                    <span>
                        <strong>[[model.pagesCurrentResultLimit]]</strong>
                    </span>
                    <span>
                        de <strong>[[model.pagesCollection.length]]</strong> entradas
                    </span>

                    <span style="border-left: 1px solid #eee;padding-left: 10px;">
                        Página
                    </span>
                    <div class="form-group inline m-b-xs" style="float:left;">
                        <select class="form-control input-s-xs"
                                data-ng-model="model.pagesCurrentPage"
                                data-ng-options="page for page in model.pagesPagesCollection"
                                data-ng-change="updatePaginationValues()">
                        </select>
                    </div>
                    <span>
                        de <strong>[[model.pagesPagesCollection.length]]</strong>
                    </span>
                </div>
            </div>
            <!-- Grid List Mode -->
            <div data-ng-if="model.activeView == 'grid_list'" style="position:relative;">
                {% include '@app_backend_template_directory/Page/grid_list.html.twig' %}
            </div>
            <!-- Simple List Mode -->
            <div data-ng-if="model.activeView == 'simple_list'" class="table-scrollable table-scrollable-borderless" style="position:relative;">
                {% include '@app_backend_template_directory/Page/simple_list.html.twig' %}
            </div>
        </div>
    </div>
</div>