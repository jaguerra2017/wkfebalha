<div class="col-md-12"  data-ng-show="model.showUsersForm">
    <!-- BEGIN Portlet Users-CRUD -->
    <div class="portlet light bordered" style="position:relative;">
        <div class="portlet-title">
            <div class="caption font-dark">
                <span class="caption-subject bold uppercase">
                    [[model.createAction == true ? 'Crear' : 'Editar']] datos del Perfil
                </span>
            </div>
            <!-- Toolbar -->
            <div class="actions custom-toolbar-actions">
                <button class="btn blue btn-blue btn-footer width-auto-important"
                type="submit" data-ng-click="saveProfile()">
                    Guardar
                </button>
                <a class="btn btn-circle btn-icon-only btn-default fullscreen"  style="margin-left:40px;"></a>
            </div>
        </div>
        <div class="portlet-body form">
            <form class="horizontal-form">
                <div class="form-body">
                    <div class="tabbable-line">
                        <!-- User sections -->
                        <ul class="nav nav-tabs">
                            <li class="[[model.formActiveView == 'general-info' ? 'active' : '']]">
                                <a href="#user_general_data" data-toggle="tab"
                                   data-ng-click="updateFormSection('general-info')">
                                    Datos generales
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="sub-tab-container">
                        <div class="tab-content">
                            <!-- General info -->
                            {% include '@app_backend_template_directory/User/crud_form_general_info.html.twig' %}
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-xs-12 col-md-offset-4 col-md-8">
                            <button class="btn blue btn-blue btn-footer"
                            type="submit" data-ng-click="saveProfile()">
                                Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Data Loader -->
        <div data-ng-show="model.loadingData">
            {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
        </div>
    </div>
</div>