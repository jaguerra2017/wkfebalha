      {#VARIAS AGENCIAS PARADISO<br>#}
      {{ params['country'] }}
      {#Cuba#}
    </td>
  </tr>
  <tr>
    <td style="font-size:14px; font-weight: bold; text-align: left; border-right: none">
      Teatro / Theater: {{ params['theater'] }}<br>
      Lugar / Place: {{ params['area'] }}
    </td>
  </tr>

  
