{% extends "@app_frontend_template_directory/themes/default/layout.html.twig" %}
{% block title %} P치ginas {% endblock %}

{% block content %}
    <!-- Pages Section -->
    <section class="news-section" data-ng-controller="pagesCtrller" data-ng-cloak>
        <h3 class="font-family-france">P치ginas</h3>
        <div class="container-fluid" style="padding-top: 60px; padding-bottom:60px;">
            <div class="row" style="margin:0">
                <div data-ng-if="model.pagesCollection.length > 0"
                 data-ng-repeat="page in model.pagesCollection"
                 class="col-xs-12 col-sm-4 col-md-3 wow fadeInUpBig" style="margin-bottom: 30px;">
                    <div class="generic-post-container-222">
                        <div class="generic-post-feature-image-container-220">
                            <a href="[[page.url]]">
                                <img data-ng-if="page.have_featured_image == true && page.featured_image_url != ''"
                                 data-ng-src="[[page.web_filtered_grid_featured_image_thumbnail_url]]">
                                <div class="generic-post-over"></div>
                            </a>
                        </div>
                        <span class="notifier-event-text ">
                            [[page.title_es | limitTo : 90]]
                        </span>

                        <a class="btn custom-general-button" style="width:100% !important;"
                           href="[[page.url]]">
                            Leer m치s
                        </a>
                    </div>
                </div>

                <div data-ng-if="model.end < model.total"
                 class="col-xs-12" style="padding: 150px 0px 100px;position:relative;">
                    <!-- Data Loader -->
                    <div data-ng-show="model.loadingData">
                        {% include '@app_backend_template_directory/Shared/data_loader.html.twig' %}
                    </div>

                    <div style="max-width:130px;margin:auto;">
                        <a class="btn custom-general-button"
                        data-ng-click="getPages()"
                        style="border:2px solid #009dc7;">
                            <i class="fa fa-plus"></i>
                            M치s
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}
