{% extends "@app_frontend_template_directory/themes/default/layout.html.twig" %}


{% block content %}
    {% set role = 'ANY_ROLE' %}
    {% if is_granted('ROLE_TESTER') %}
        {% set role = 'ROLE_TESTER' %}
    {% endif %}
    {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
        {% set role = 'IS_AUTHENTICATED_ANONYMOUSLY' %}
    {% endif %}

    <!-- Banner -->
    <section class="home-slider" >
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN WIDGET GRADIENT -->
                <div class="clearfix"></div>
                <div id="carousel-example-generic-v1" class="carousel slide widget-carousel rounded-3" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic-v1" data-slide-to="0" class="circle active"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="1" class="circle"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="2" class="circle"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="3" class="circle"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="4" class="circle"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <div class="widget-gradient widget-gradient-img-v2 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-1.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-2.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-3.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-4.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-5.jpg') }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END WIDGET GRADIENT -->
            </div>
        </div>

        {#{% if themeConfigsData.headerConfigs is not empty %}
            {% if themeConfigsData.headerConfigs.welcome_image_url is not empty %}
                <img src="{{ themeConfigsData.headerConfigs.welcome_image_url | imagine_filter('default_theme_banner')}}">
            {% endif %}
            {% if themeConfigsData.headerConfigs.welcome_text is not empty %}

            {% endif %}
        {% endif %}#}
    </section>

    <!-- Program Summary -->
    <section class="home-program-summary">
        <h3 class="title main-title wow fadeInUpBig">
            {{ "schedule_section_title" | trans({}, 'home-page', app.session.get('_locale')) }}</br>
            <p class="title-separator"></p>
        </h3>
        <div class="container wow fadeInUpBig">
            <program home="true" user-role="'{{ role }}'" current-language="'{{ app.session.get('_locale') }}'"></program>

            <div class="row">
                <div class="col-md-12 text-center">
                    <a class="btn custom-general-button"
                       href="{{ functionsMainPageUrl }}">
                        {{ "btn.see_more_text" | trans({}, 'general', app.session.get('_locale')) }}
                    </a>
                </div>
            </div>
        </div>

    </section>


    <!-- News Summary -->
    <section class="home-news-summary bgcolor-odd">
        <h3 class="title main-title wow fadeInUpBig">
            {{ "news_section_title" | trans({}, 'home-page', app.session.get('_locale')) }}
            <p class="title-separator"></p>
        </h3>
        <div class="container">
            {% if newsSummaryData is not empty%}
                <div class="row news-summary wow fadeInUpBig" style="margin-left:0px;margin-right:0px;">
                    {% for key,newObj in newsSummaryData %}
                        {% if key is even %}
                            <div class="col-xs-12 wow fadeInUpBig" style="margin: 40px 0;">
                                <div class="generic-post-grid-container summary-first-container">
                                    <div class="row generic-post-grid-feature-image-container summary-first">
                                        {% if newObj.have_featured_image == true  %}
                                            <div class="col-xs-12 col-sm-6 col-md-6" >
                                                <img src="{{ newObj.web_filtered_home_summary_image_thumbnail_url }}" style="max-width:100%;">
                                            </div>
                                        {% endif %}
                                        <div class="col-xs-12 col-sm-6 col-md-5 col-md-offset-1">
                                            <span class="notifier-event-date">
                                                {{ newObj.published_date }}
                                            </span>
                                            <span class="notifier-event-text app-text-color">
                                                {{ newObj.title }}</br>
                                                <span class="title-separator" style="float:left;"></span>
                                            </span>

                                            <span class="summary-excerpt">
                                                {{ newObj.excerpt }}
                                            </span>
                                            <a class="btn custom-general-button"
                                               href="{{ newObj.url }}">
                                                {{ "btn.read_more_text" | trans({}, 'general', app.session.get('_locale')) }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if key is odd %}
                            <div class="col-xs-12 wow fadeInUpBig" style="margin: 40px 0;">
                                <div class="generic-post-grid-container summary-first-container">
                                    <div class="row generic-post-grid-feature-image-container summary-first">
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <span class="notifier-event-date">
                                                {{ newObj.published_date }}
                                            </span>
                                            <span class="notifier-event-text app-text-color">
                                                {{ newObj.title }}</br>
                                                <span class="title-separator" style="float:left;"></span>
                                            </span>

                                            <span class="summary-excerpt">
                                                {{ newObj.excerpt }}
                                            </span>

                                            <a class="btn custom-general-button"
                                               href="{{ newObj.url }}">
                                                {{ "btn.read_more_text" | trans({}, 'general', app.session.get('_locale')) }}
                                            </a>
                                        </div>
                                        {% if newObj.have_featured_image == true  %}
                                            <div class="col-xs-12 col-sm-6 col-md-6  col-md-push-1" >
                                                <img src="{{ newObj.web_filtered_home_summary_image_thumbnail_url }}"
                                                     class="post-inverse-img" style="max-width:100%;">
                                            </div>
                                        {% endif %}

                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <div class="col-xs-12" style="padding: 80px 0px 100px;">
                        <div class="generic-post-grid-container" style="max-width:140px;">
                            <a class="btn custom-general-button"
                               href="{{ newsMainPageUrl }}">
                                {{ "btn.see_more_text" | trans({}, 'general', app.session.get('_locale')) }}
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

    </section>

    <!-- Guests & Collateral Program -->
    {#<section class="home-guest-collateral-program">

    </section>#}


{% endblock %}