        {% endif %}#}
    </section>

    <!-- Program Summary -->
    <section class="home-program-summary">
        <h3 class="title main-title wow fadeInUpBig">
            {{ "schedule_section_title" | trans({}, 'home-page', app.session.get('_locale')) }}</br>
            <p class="title-separator"></p>
        </h3>
        <div class="container wow fadeInUpBig">
            <program home="true" user-role="'{{ role }}'" current-language="'es'"></program>

            <div class="row">
                <div class="col-md-12">
                    <a class="btn custom-general-button app-text-color"
                       href="">
                        {{ "schedule_section_title" | trans({}, 'home-page', app.session.get('_locale')) }}
                    </a>
                </div>
            </div>
        </div>

    </section>


    <!-- News Summary -->
    <section class="home-news-summary bgcolor-odd">
        <h3 class="title main-title wow fadeInUpBig">
            {{ "news_section_title" | trans({}, 'home-page', app.session.get('_locale')) }}
            <p class="title-separator"></p>
        </h3>
        {% if newsSummaryData is not empty%}
            <div class="row news-summary wow fadeInUpBig" style="margin-left:0px;margin-right:0px;">
                {% for key,newObj in newsSummaryData %}
                  {% if key <= 2 %}
                      <div class="col-xs-12 wow fadeInUpBig">
                          <div class="generic-post-grid-container summary-first-container">
                              <div class="generic-post-grid-feature-image-container summary-first">
                        {% if newObj.have_featured_image == true  %}
                            <div class="col-xs-12 col-sm-6 col-md-6" >
                                <img src="{{ newObj.web_filtered_grid_featured_image_thumbnail_url }}">
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                    <span class="notifier-event-date app-text-color">
                                        {{ newObj.published_date }}
                                    </span>
                                <span class="notifier-event-text app-text-color">
                                        {{ newObj.title }}
                                    </span>

                                <a class="btn custom-general-button app-text-color"
                                   href="{{ newObj.url }}">
                                    Leer más
                                </a>
                            </div>
                            </div>
                            </div>
                        {% endif %}
                      </div>
                  {% endif %}
                {% endfor %}
