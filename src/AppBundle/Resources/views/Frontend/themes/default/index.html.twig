{% extends "@app_frontend_template_directory/themes/default/layout.html.twig" %}


{% block content %}
    {% set role = 'IS_AUTHENTICATED_ANONYMOUSLY' %}
    {% if is_granted('ROLE_SALESMAN') %}
        {% set role = 'ROLE_SALESMAN' %}
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        {% set role = 'ROLE_ADMIN' %}
    {% endif %}

    <!-- Banner -->
    <section class="home-slider" >
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN WIDGET GRADIENT -->
                <div class="clearfix"></div>
                <div id="carousel-example-generic-v1" class="carousel slide widget-carousel rounded-3" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic-v1" data-slide-to="0" class="circle active"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="1" class="circle"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="2" class="circle"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="3" class="circle"></li>
                        <li data-target="#carousel-example-generic-v1" data-slide-to="4" class="circle"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <div class="widget-gradient widget-gradient-img-v2 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-1.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-2.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-3.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-4.jpg') }}">
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="widget-gradient widget-gradient-img-v1 rounded-3">
                                <div class="widget-gradient-body">
                                    <img src="{{ asset('images/frontend/themes/default/slider/diapo-5.jpg') }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END WIDGET GRADIENT -->
            </div>
        </div>

        {#{% if themeConfigsData.headerConfigs is not empty %}
            {% if themeConfigsData.headerConfigs.welcome_image_url is not empty %}
